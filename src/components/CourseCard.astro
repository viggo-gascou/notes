---
import { Image } from 'astro:assets'

interface Props {
	href: string;
	image: any;
  alt: string;
	title: string
}

const { href, image, alt, title } = Astro.props;
---

<a href={`${href}`} class="w-full md:w-1/2 lg:w-1/3 px-4 mb-8">
    <div class=" bg-white dark:bg-shark-800 rounded-lg shadow-lg overflow-hidden hover:scale-105 hover:shadow-accent transition duration-300">
      <Image class="card-img" src={image} alt={alt} loading="eager"/>
      <div class="py-5 text-center">
        <h2 class="text-xl font-bold mb-2">{title}</h2>
      </div>
    </div>
  </a>
