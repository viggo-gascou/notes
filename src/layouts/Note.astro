---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Body from '@components/Body.astro';
import FormattedDate from '@components/FormattedDate.astro';


const { title, tags, pubDate, updatedDate } = Astro.props;

import { Image } from 'astro:assets';

type Props = CollectionEntry<"second-year-project">["data"];


---

<html lang="en">
	<head>
		<BaseHead title={title} description={tags} />
		<style>
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<Body>
		<Header />
		<main class="prose dark:prose-invert w-screen flex-1 pt-40">
			<article>
				<div>
					<div class="pt-4 text-center leading-none">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</Body>
</html>
